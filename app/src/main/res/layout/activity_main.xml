<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/main_LAY_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_backround_start">

        <LinearLayout
            android:id="@+id/main_LAY_leftplayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <ProgressBar
                android:id="@+id/main_LPB_leftbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progressDrawable="@drawable/custom_progress"
                android:progressTint="#63FF00" />

            <ImageView
                android:id="@+id/main_IMG_left"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/img_liel" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_LAY_btnleft"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/main_LAY_leftplayer">

            <Button
                android:id="@+id/main_BTN_1L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Request"
                android:textColor="@color/btnTextColor" />

            <Button
                android:id="@+id/main_BTN_2L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/main_BTN_1L"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Cry"
                android:textColor="@color/btnTextColor" />

            <Button
                android:id="@+id/main_BTN_3L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Scream"
                android:textColor="@color/btnTextColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_LAY_btnright"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@id/main_LAY_btnleft">

            <Button
                android:id="@+id/main_BTN_1R"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Nipple"
                android:textColor="@color/btnTextColor" />

            <Button
                android:id="@+id/main_BTN_2R"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/main_BTN_1R"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Baby bottle"
                android:textColor="@color/btnTextColor" />

            <Button
                android:id="@+id/main_BTN_3R"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="10"
                android:background="@color/btnFontColor"
                android:text="Sing Song"
                android:textColor="@color/btnTextColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_LAY_rightplayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/main_LAY_btnright"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="30dp">

            <ProgressBar
                android:id="@+id/main_LPB_rightbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progressDrawable="@drawable/custom_progress"
                android:progressTint="#63FF00" />

            <ImageView
                android:id="@+id/main_IMG_right"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/img_nathan" />
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>